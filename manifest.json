{
  "manifest_version": 3,
  "name": "Food Club",
  "description": "Automatically make bets on Food Club",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", "tabs", "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.neopets.com/pirates/foodclub.phtml?type=bet"],
      "js": ["content.js"]
    }
  ]
}